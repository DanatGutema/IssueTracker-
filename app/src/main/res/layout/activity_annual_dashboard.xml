<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/bg5"
        android:orientation="vertical"
        android:padding="35dp">

        <Button
            android:id="@+id/btnFirst"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#407AD5"
            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            android:textSize="17sp"
            app:cornerRadius="10dp"
            android:text="First Quarter (Q1)" />

        <Button
            android:id="@+id/btnSecond"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:backgroundTint="#407AD5"
            android:layout_marginBottom="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000"
            android:textSize="17sp"
            app:cornerRadius="10dp"
            android:text="Second Quarter (Q2)" />

        <Button
            android:id="@+id/btnThird"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:backgroundTint="#407AD5"
            android:layout_marginBottom="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000"
            android:textSize="17sp"
            app:cornerRadius="10dp"
            android:text="Third Quarter (Q3)" />

        <Button
            android:id="@+id/btnFourth"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:backgroundTint="#407AD5"
            android:layout_marginBottom="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000"
            android:textSize="17sp"
            app:cornerRadius="10dp"
            android:text="Fourth Quarter (Q4)" />
        <Button
            android:id="@+id/btnFirstSix"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#407AD5"
            android:layout_marginBottom="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000"
            android:textSize="17sp"
            app:cornerRadius="10dp"
            android:text="The First Half Year (July-December)" />
        <Button
            android:id="@+id/btnSecondSix"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#407AD5"
            android:layout_marginBottom="12dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000"
            android:textSize="17sp"
            app:cornerRadius="10dp"
            android:text="The Second Half Year (January-June)" />

        <Button
            android:id="@+id/btnAnnual"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:backgroundTint="#407AD5"
            android:layout_marginBottom="12dp"
            android:text="Annual Report"
            android:textColor="#FFFFFF"
            android:textColorHint="#000000"
            android:textSize="17sp"
            app:cornerRadius="10dp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="352dp" />
</androidx.cardview.widget.CardView>
