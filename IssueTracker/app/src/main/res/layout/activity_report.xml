<?xml version="1.0" encoding="utf-8"?>
<!-- Place this in res/layout/activity_report.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RootReport"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newbg"
    android:orientation="vertical"
    android:padding="12dp">

    <!-- Top Row: Date range box (75%) + Search (25%) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- Search box (25%) -->

        <EditText
            android:id="@+id/etSearchBank"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.78"
            android:background="#F6F6F6"
            android:hint="Search Bank or Machine Type"
            android:padding="10dp"
            android:textSize="14sp"
            android:paddingStart="45dp"
            android:textColor="#000000"
            android:textColorHint="#666666"
            android:drawableStart="@drawable/baseline_search_24" />


        <!-- Date Range box (75%) -->
        <LinearLayout
            android:id="@+id/DateBox"
            android:layout_width="0dp"
            android:layout_height="43.5dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="0.25"
            android:background="#E6F0FF"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">
<!--
            <TextView
                android:id="@+id/tvSelectRange"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:text="Select Range"
                android:textColor="#000000"
                android:textSize="16sp" />
-->
            <ImageView
                android:id="@+id/ivCalendar"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:paddingStart="20dp"
                android:contentDescription="Calendar"
                android:src="@android:drawable/ic_menu_my_calendar" />
        </LinearLayout>

    </LinearLayout>

    <!-- Download icon aligned right -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:clickable="false"
        android:focusable="false">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/ivDownload"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:contentDescription="Download"
            android:padding="6dp"
            android:visibility="gone"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:src="@drawable/outline_arrow_downward_24" />
    </LinearLayout>

    <!-- Table area: vertical scroll + horizontal scroll to allow large tables -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bg5"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal">

            <TableLayout
                android:id="@+id/tableReport"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:stretchColumns="1,2" />

        </HorizontalScrollView>
    </ScrollView>
</LinearLayout>
